{# templates/product/show.html.twig #}

{% extends 'base.html.twig' %}
{% block title %}{{ product_item.name }}{% endblock %}
{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <img src="{{ asset(product_item.image) }}" class="img-fluid" alt="{{ product_item.name }}">
        </div>
        <div class="col-md-6">
            <h1>{{ product_item.name }}</h1>
            <p>{{ product_item.description }}</p>
            <h3>{{ product_item.price|number_format(2, ',', ' ') }} €</h3>
            <p>Prix Hors Taxes : <strong>{{ product_item.price|number_format(2, ',', ' ') }} €</strong></p>
    <p>Taux de TVA : {{ tva_rate }}%</p>
    <h3>Prix Toutes Taxes Comprises : <strong>{{ price_ttc|number_format(2, ',', ' ') }} €</strong></h3>

            
        </div>
    </div>
</div>
{% endblock %}